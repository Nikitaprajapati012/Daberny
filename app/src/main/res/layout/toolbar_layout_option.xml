<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/signinbg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/signinbg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:text="@string/daberny"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp"
                />

            <ImageView
                android:id="@+id/toolbar_useradd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:src="@mipmap/ic_useradd" />

            <ImageView
                android:id="@+id/toolbar_inbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="5dp"
                android:src="@mipmap/ic_inbox" />

           <!-- <ImageView
                android:id="@+id/toolbar_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:padding="10dp"
                android:onClick="onClick"
                android:src="@drawable/ic_option" />
-->
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>


