<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerview_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@color/signinbg">
        <include layout="@layout/header_layout"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/oldpassword"
                    android:textSize="@dimen/_13sdp"
                    />

                <EditText
                    android:id="@+id/activity_change_password_edoldpwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/password"
                    android:textSize="@dimen/_13sdp"
                    />

                <EditText
                    android:id="@+id/activity_change_password_ednewpwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:inputType="textPassword"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/confirmpassword"
                    android:textSize="@dimen/_13sdp"
                    />

                <EditText
                    android:id="@+id/activity_change_password_edconfirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/activity_change_password_btnsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/askque"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


