<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fragment_follower_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/signin_bg"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/fragment_follower_imgback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|top|left"
                android:gravity="center|top|left"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:paddingTop="@dimen/_10sdp"
                android:text="Follower"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fragment_follower_header"
            android:layout_marginTop="@dimen/_5sdp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_follower_recycler_followerlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>