<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ask_question_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <include layout="@layout/toolbar_layout_option"/>
    </RelativeLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/title"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edquestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/title"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/tag"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edtags"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/tag"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/option1"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edoption1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/option1req"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/option2"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edoption2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/option2req"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/option3"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edoption3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/option3optional"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/option4"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/activity_ask_question_edoption4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:hint="@string/option4optional"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/file"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/activity_ask_question_txtfilepath"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:background="@drawable/loginborder"
                            android:gravity="center|left"
                            android:text="@string/uploadfile"
                            android:clickable="false"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_9sdp" />

                        <ImageView
                            android:id="@+id/activity_ask_question_btncamera"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:src="@mipmap/ic_camera"
                            android:padding="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:background="@drawable/roundborder_bluebg"
                            />

                        <ImageView
                            android:id="@+id/activity_ask_question_btnvideo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:padding="@dimen/_9sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:src="@mipmap/ic_video"
                            android:background="@drawable/roundborder_bluebg"
                            />
                       <!-- <life.knowledge4.videotrimmer.K4LVideoTrimmer
                            android:id="@+id/timeLine"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent" />
-->
                                          </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/chooseinterest"
                        android:textSize="@dimen/_13sdp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/activity_ask_question_spinnerinterest"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/loginborder"
                        android:contextClickable="true"

                        >

                    </android.support.v7.widget.AppCompatSpinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|left"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="@string/addtime"
                        android:textSize="@dimen/_13sdp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/activity_ask_question_timespinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/loginborder"
                        android:entries="@array/time"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/activity_ask_question_btnsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/askque"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


