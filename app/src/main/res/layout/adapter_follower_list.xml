<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_follower_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/follower_bg"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_profileiconsmall_bg"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adapter_follower_list_imgprofilepic"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:padding="8dp"
                android:src="@drawable/ic_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_follower_list_txtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/logintext"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:id="@+id/adapter_follower_list_txtinterest1_layout"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/interest_bg"
                android:weightSum="2">

                <TextView
                    android:id="@+id/adapter_follower_list_txtinterest1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/interest_bg"
                    />
                <TextView
                    android:id="@+id/adapter_follower_list_txtlevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/adapter_follower_list_txtinterest2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:background="@drawable/interest_bg"
                android:weightSum="2">

                <TextView
                    android:id="@+id/adapter_follower_list_txtinterest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/interest_bg"
                    />
                <TextView
                    android:id="@+id/adapter_follower_list_txtlevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/adapter_follower_list_txtinterest3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:background="@drawable/interest_bg"
                android:weightSum="2">

                <TextView
                    android:id="@+id/adapter_follower_list_txtinterest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/interest_bg"
                    />
                <TextView
                    android:id="@+id/adapter_follower_list_txtlevel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>