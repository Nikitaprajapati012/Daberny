<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/dialog_share_option_layoutfb"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/facebook_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_whitefbicon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_share_option_layouttwitter"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/twitter_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_tweeticon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_share_option_layoutshare"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/share_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ic_share" />
    </LinearLayout>
    <com.example.raviarchi.daberny.Activity.Activity.MultiSelectSpinner
        android:id="@+id/dialog_share_option_spinnerFollowing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_weight="0.5"
        android:background="@drawable/loginborder"
        android:textColor="@color/logintext"
        android:textColorHint="@color/logintext"
        android:visibility="gone" />
</LinearLayout>