<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerview_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/signinbg"
        android:orientation="horizontal">
        <include layout="@layout/header_layout" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6"
            android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/oldpassword"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/activity_change_password_edoldpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/password"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/activity_change_password_ednewpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/confirmpassword"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/activity_change_password_edconfirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/loginborder"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/activity_change_password_btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="submit"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/signinbg"
                android:textColor="@color/white"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>


